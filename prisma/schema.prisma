generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum BackgroundType {
  color
  gradient
  wallpaper
  image
}

enum ProfileLayout {
  center
  left_stack
  left_row
}

enum CardTexture {
  base
  glassy
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  username      String?   @unique
  isOnboarded   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  role          Role      @default(USER)
  sessions      Session[]
  accounts      Account[]
  profile       Profile?

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Profile {
  id          String   @id @default(cuid())
  slug        String? @unique
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // --- Profile Info ---
  displayName String?
  bio         String?
  avatarUrl   String?
  layout      ProfileLayout @default(center)

  // --- Background Settings ---
  bgType      BackgroundType @default(color)
  bgColor     String         @default("#1a1a1a")
  bgGradientFrom String?
  bgGradientTo   String?
  bgWallpaper    String?     
  bgImage        String?     
  
  // --- Design & Effects ---
  blurAmount  Int            @default(0)
  padding     Int            @default(16)
  cardTexture CardTexture    @default(base)
  
  bgEffects   Json?          
  
  // --- Relations ---
  socials     SocialLink[]
  links       Link[]
  
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profile")
  @@index([userId])
}

model SocialLink {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  platform  String   // x, instagram, github, dll
  url       String
  position  Int      @default(0)

  @@map("social_link")
}

model Link {
  id          String   @id @default(cuid())
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  title       String
  url         String
  icon        String?
  description String?
  
  mediaUrl    String?   
  mediaType   MediaType? 
  
  paymentProvider PaymentProvider? 
  paymentAccountId String?
  
  position    Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clicks      LinkClick[]
  
  @@index([profileId])
  @@map("link")
}

enum MediaType {
  image
  video
}

enum PaymentProvider {
  stripe
  lemonsqueezy
}

model LinkClick {
  id                 String   @id @default(cuid())
  linkId             String
  link               Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  referrer           String?
  country            String?
  device             String?
  browser            String?
  operatingSystem    String?
  utmSource          String?
  utmMedium          String?
  utmCampaign        String?
  utmTerm            String?
  utmContent         String?
  ipAddress          String?
  userAgent          String?
  sessionFingerprint String?
  idempotencyKey     String?  @unique
  isBot              Boolean  @default(false)
  clickedAt          DateTime @default(now())

  @@index([linkId])
  @@index([clickedAt])
  @@index([sessionFingerprint])
  @@index([idempotencyKey])
  @@index([utmSource])
  @@index([utmMedium])
  @@index([utmCampaign])
  @@map("link_click")
}






